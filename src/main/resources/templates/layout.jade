doctype html
html
    head
        // Required meta tags
        meta(charset='utf-8')
        meta(content='width=device-width, initial-scale=1, shrink-to-fit=no' name='viewport')
        // Bootstrap CSS
        link(crossorigin='anonymous' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' rel='stylesheet')
        link(href='/style.css', rel='stylesheet')
        link(href='/pivot.css', rel='stylesheet')
        title Hello, world!
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
            .container
                a.navbar-brand(href='/') Poker du Jeudi
                button.navbar-toggler(aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation' data-target='#navbarSupportedContent' data-toggle='collapse' type='button')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        mixin menuItem(title, url, name)
                            li.nav-item(class=name == active ? 'active' : '')
                                a.nav-link(href=url) #{title}
                        +menuItem('Accueil', '/', 'home')
                        +menuItem('Joueurs', '/players', 'players')
                        +menuItem('Sessions', '/sessions', 'sessions')
                        +menuItem('Stats', '/stats', 'stats')
        block content

        .container
            hr
        footer.container
            p &copy; 2020 Benjamin Bini
        // Optional JavaScript
        // jQuery first, then Popper.js, then Bootstrap JS
        script(crossorigin='anonymous' src='https://code.jquery.com/jquery-3.4.1.min.js')
        script(crossorigin='anonymous' src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
        script(crossorigin='anonymous' src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js')
        script(src='/fontawesome.js', crossorigin='anonymous')
        script(src='/papaparse.js', crossorigin='anonymous')
        script(src='/jqueryui.js', crossorigin='anonymous')
        script(src='/pivot.js', crossorigin='anonymous')
        script(src='/pivot.fr.js', crossorigin='anonymous')
        script(src='/plotly.js', crossorigin='anonymous')
        script(src='/plotly_renderers.js', crossorigin='anonymous')

        script(src='https://unpkg.com/axios/dist/axios.min.js')
        script(src='https://cdn.jsdelivr.net/npm/vue/dist/vue.js')
        script(src='/script.js')