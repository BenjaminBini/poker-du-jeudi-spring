extends layout.jade

block content

    .container-fluid
        .container
            .row
                .col
                    ul#pills-tab.nav.nav-pills.mb-3(role='tablist')
                        each season, index in seasons
                            li.nav-item
                                if index == 0
                                    a.nav-link.active(id="#pills-#{season.name}-tab", data-toggle='pill' href='#pills-#{season.name}' role='tab' aria-controls='pills-#{season.name}' aria-selected='true') #{season.name}
                                else
                                    a.nav-link(id="#pills-#{season.name}-tab", data-toggle='pill' href='#pills-#{season.name}' role='tab' aria-controls='pills-#{season.name}' aria-selected='true') #{season.name}
                        li.nav-item
                            a.nav-link(id="#pills-all-tab", data-toggle='pill' href='#pills-all' role='tab' aria-controls='pills-all') Tout
                        li.nav-item
                            a.nav-link(id="#pills-stats-tab", data-toggle='pill' href='#pills-stats' role='tab' aria-controls='pills-stats') Analyse
        #pills-tabContent.tab-content
            each season, index in seasons
                .tab-pane.fade.show(id='pills-#{season.name}', class='#{index == 0 ? "active" : ""}', role='tabpanel', aria-labelledby='pills-#{season.name}-tab')
                    .container
                        .row
                            .col
                                ul#pills-subtab.nav.nav-pills.mb-3(role='tablist')
                                    li.nav-item
                                        a.nav-link.active(id="#pills-#{season.name}-tab-1", data-toggle='pill' href='#pills-#{season.name}-1' role='tab' aria-controls='pills-#{season.name}-1' aria-selected='true') Gains
                                    li.nav-item
                                       a.nav-link(id="#pills-#{season.name}-tab-2", data-toggle='pill' href='#pills-#{season.name}-2' role='tab' aria-controls='pills-#{season.name}-2') Détails
                                    li.nav-item
                                       a.nav-link(id="#pills-#{season.name}-tab-3", data-toggle='pill' href='#pills-#{season.name}-3' role='tab' aria-controls='pills-#{season.name}-2') Présence
                                    li.nav-item
                                       a.nav-link(id="#pills-#{season.name}-tab-4", data-toggle='pill' href='#pills-#{season.name}-4' role='tab' aria-controls='pills-#{season.name}-4') Variance

                    #pills-subtabContent.tab-content
                        .tab-pane.fade.show(id='pills-#{season.name}-1', class='active', role='tabpanel', aria-labelledby='pills-#{season.name}-tab-1')
                            .container
                                .pivot.pivot-sum(data-year='#{season.name}')
                        .tab-pane.fade.show(id='pills-#{season.name}-2', role='tabpanel', aria-labelledby='pills-#{season.name}-tab-2')
                            .pivot.pivot-detail(data-year='#{season.name}')
                        .tab-pane.fade.show(id='pills-#{season.name}-3', role='tabpanel', aria-labelledby='pills-#{season.name}-tab-3')
                            .container
                                .pivot.pivot-number(data-year='#{season.name}')
                        .tab-pane.fade.show(id='pills-#{season.name}-4', role='tabpanel', aria-labelledby='pills-#{season.name}-tab-4')
                            .container
                                .pivot.pivot-deviation(data-year='#{season.name}')
            .tab-pane.fade.show(id='pills-all', role='tabpanel', aria-labelledby='pills-all-tab')
                .container
                    .row
                        .col
                            ul#pills-subtab.nav.nav-pills.mb-3(role='tablist')
                                li.nav-item
                                    a.nav-link.active(id="#pills-all-tab-1", data-toggle='pill' href='#pills-all-1' role='tab' aria-controls='pills-all-1' aria-selected='true') Gains
                                li.nav-item
                                   a.nav-link(id="#pills-all-tab-2", data-toggle='pill' href='#pills-all-2' role='tab' aria-controls='pills-all-2') Détails
                                li.nav-item
                                   a.nav-link(id="#pills-all-tab-3", data-toggle='pill' href='#pills-all-3' role='tab' aria-controls='pills-all-3') Présence
                                li.nav-item
                                   a.nav-link(id="#pills-all-tab-4", data-toggle='pill' href='#pills-all-4' role='tab' aria-controls='pills-all-4') Variance

                #pills-subtabContent.tab-content
                    .tab-pane.fade.show(id='pills-all-1', class='active', role='tabpanel', aria-labelledby='pills-all-tab-1')
                        .container
                            .pivot.pivot-sum(data-year='all')
                    .tab-pane.fade.show(id='pills-all-2', role='tabpanel', aria-labelledby='pills-all-tab-2')
                        .pivot.pivot-detail(data-year='all')
                    .tab-pane.fade.show(id='pills-all-3', role='tabpanel', aria-labelledby='pills-all-tab-3')
                        .container
                            .pivot.pivot-number(data-year='all')
                    .tab-pane.fade.show(id='pills-all-4', role='tabpanel', aria-labelledby='pills-all-tab-4')
                        .container
                            .pivot.pivot-deviation(data-year='all')
            .tab-pane.fade.show(id='pills-stats', role='tabpanel', aria-labelledby='pills-stats-tab')
                .container-fluid
                    .row
                        .col
                            .pivot.pivot-stats